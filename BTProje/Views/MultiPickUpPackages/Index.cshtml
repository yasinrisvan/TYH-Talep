@using BTProje.Models.EntityFramework
@model KargoModel

@{
    ViewBag.Title = "MultiPickUpPackages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    KullaniciTablosu kullanici = (KullaniciTablosu)Session["kullanici"];
}

<p>

</p>
<h4>
    <center>
        TOPLU TESLİM ALIM
    </center>
</h4>
<br />

@using (Html.BeginForm("Index", "MultiPickUpPackages"))
{

    <table id="tbl1" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>Kargo Numarası</th>
                <th>Çıkış Yeri</th>
                <th>Varış Yeri</th>
                <th>Alıcı Personel</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Kargos.Count; i++)
            {

                <tr>

                    <td>
                        @Html.CheckBoxFor(m => m.Kargos[i].DurumCheck)
                        <label>
                            @Model.Kargos[i].Id
                        </label>
                        @Html.HiddenFor(m => m.Kargos[i].Id)
                    </td>
                    <td>
                        @Model.Kargos[i].BölgelerTablosu.Bölge
                    </td>
                    <td>
                        @Model.Kargos[i].BölgelerTablosu1.Bölge
                    </td>
                    <td>
                        @Model.Kargos[i].AliciAdSoyad
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <div class="col-4">
        <input type="submit" class="btn btn-primary form-control" value="TOPLU TESLİM AL" />

    </div>

}

<script src="~/Scripts/jquery-3.6.0.min.js"></script>


